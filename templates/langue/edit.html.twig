{% extends 'base.html.twig' %}

{% block title %}Modifier la Langue 🌍{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4 text-primary">✏️ Modifier la Langue</h1>

        <div class="card shadow-sm p-4">
            {{ form_start(form) }}
                {{ form_widget(form, {'attr': {'class': 'mb-3'}}) }}
                <button class="btn btn-success mt-3">💾 Enregistrer</button>
            {{ form_end(form) }}
        </div>

        <a href="{{ app.request.headers.get('referer') ?: path('app_langues') }}" class="btn btn-secondary mt-3">⬅️ Retour</a>
    </div>
{% endblock %}

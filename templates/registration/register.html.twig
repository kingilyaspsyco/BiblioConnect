{% extends 'base.html.twig' %}

{% block title %}Créer un compte{% endblock %}

{% block body %}
<div class="container d-flex align-items-center justify-content-center" style="min-height: 100vh; background-color: white;">
    <div class="card shadow-lg p-4" style="width: 100%; max-width: 500px; border-radius: 1rem;">
        <h2 class="text-center mb-4" style="color: #345e5e;">Créer un compte</h2>

        {{ form_start(registrationForm) }}
            <div class="mb-3">
                {{ form_label(registrationForm.firstname, 'Prénom', {'label_attr': {'class': 'form-label fw-semibold', 'style': 'color:#345e5e;'}}) }}
                {{ form_widget(registrationForm.firstname, {'attr': {'class': 'form-control rounded-3', 'placeholder': 'Votre prénom'}}) }}
                {{ form_errors(registrationForm.firstname) }}
            </div>

            <div class="mb-3">
                {{ form_label(registrationForm.lastname, 'Nom', {'label_attr': {'class': 'form-label fw-semibold', 'style': 'color:#345e5e;'}}) }}
                {{ form_widget(registrationForm.lastname, {'attr': {'class': 'form-control rounded-3', 'placeholder': 'Votre nom'}}) }}
                {{ form_errors(registrationForm.lastname) }}
            </div>

            <div class="mb-3">
                {{ form_label(registrationForm.email, 'Email', {'label_attr': {'class': 'form-label fw-semibold', 'style': 'color:#345e5e;'}}) }}
                {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control rounded-3', 'placeholder': 'Votre adresse email'}}) }}
                {{ form_errors(registrationForm.email) }}
            </div>

            <div class="mb-3">
                {{ form_label(registrationForm.plainPassword, 'Mot de passe', {'label_attr': {'class': 'form-label fw-semibold', 'style': 'color:#345e5e;'}}) }}
                {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control rounded-3', 'placeholder': 'Choisissez un mot de passe'}}) }}
                {{ form_errors(registrationForm.plainPassword) }}
            </div>

            <div class="form-check mb-3">
                {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
                {{ form_label(registrationForm.agreeTerms, 'J’accepte les conditions d’utilisation', {'label_attr': {'class': 'form-check-label'}}) }}
                {{ form_errors(registrationForm.agreeTerms) }}
            </div>

            <button type="submit" class="btn w-100" style="background-color:#345e5e; color:white;">Créer mon compte</button>
        {{ form_end(registrationForm) }}

        <p class="mt-3 text-center">
            Déjà inscrit ? <a href="{{ path('app_login') }}" style="color:#345e5e;">Se connecter</a>
        </p>
    </div>
</div>

<style>
    body {
        background-color: white !important;
    }
    .btn:hover {
        background-color: #2c4d4d !important;
        transition: background-color 0.3s ease;
    }
    .form-control:focus {
        border-color: #345e5e;
        box-shadow: 0 0 0 0.2rem rgba(52, 94, 94, 0.25);
    }
</style>
{% endblock %}

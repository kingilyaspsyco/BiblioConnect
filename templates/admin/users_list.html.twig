{% extends 'base.html.twig' %}

{% block title %}Gestion des Utilisateurs{% endblock %}

{% block body %}
    <h1>📋 Liste des Utilisateurs</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Email</th>
                <th>Rôle</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.email }}</td>
                    <td>{{ user.roles[0] }}</td>
                    <td>
                        <a href="{{ path('admin_user_edit_role', { id: user.id }) }}" class="btn btn-warning">Modifier le rôle</a>
                        <a href="{{ path('admin_user_delete', { id: user.id }) }}" class="btn btn-danger" onclick="return confirm('Es-tu sûr de vouloir supprimer cet utilisateur ?');">Supprimer</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">Aucun utilisateur trouvé.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_home') }}">⬅️ Retour au Dashboard</a>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Modifier la Catégorie 📚{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4 text-primary">✏️ Modifier la Catégorie</h1>

        <div class="card shadow-sm p-4">
            {{ form_start(form) }}
                <div class="form-group mb-3">
                    {{ form_label(form.nom, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                </div>

                <input type="hidden" name="_target_path" value="{{ _target_path }}">
                <button class="btn btn-success mt-3">💾 Mettre à jour</button>
            {{ form_end(form) }}
        </div>

        <a href="{{ _target_path }}" class="btn btn-secondary mt-3">⬅️ Retour</a>
    </div>
{% endblock %}
